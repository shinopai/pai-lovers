<header>
<%= render 'layouts/partial/header' %>
</header>
 
<main>
  <div class="container mx-auto p-8">
    <div class="mx-auto w-2/3">
        <div class="bg-white rounded shadow p-4">
            <div class="border-b py-8 font-bold text-black text-center text-xl tracking-widest uppercase">
                ログイン
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |login_user| %>

                <div class="mb-3">
                    <%= login_user.text_field :email, class: 'border w-full p-3', placeholder: 'メールアドレス' %>
                </div>
                <div class="mb-6">
                    <%= login_user.password_field :password, class: 'border w-full p-3', placeholder: 'パスワード' %>
                </div>
                <% if devise_mapping.rememberable? %>
                <div class="mb-6">
                  <%= login_user.check_box :remember_me %>
                  <%= login_user.label :remember_me, 'ログイン状態を保存' %>
                </div>
                <% end %>
                <div class="mb-6">
                    <%= login_user.submit 'ログイン', class: 'bg-gray-300 hover:bg-gray-600 w-full p-4 text-sm text-white uppercase font-bold tracking-wider cursor-pointer' %>
                </div>
            <% end %>
            <div class="border-t px-10 py-6">
                <div class="flex justify-between text-blue-500">
                  <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
  </div>
</main>

<footer>
<%= render 'layouts/partial/footer' %>
</footer>
